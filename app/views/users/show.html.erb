<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'jpeg',fallback:"no_image.jpg" %>
<table class = "table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if @user.id == current_user.id %>
  <P><%= link_to "Edit",edit_user_path(@user) %></P>
  <% end %>
</div>
