<%= render 'users/new',book: @book %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'jpeg',fallback:"no_image.jpg" %>
<table class = "table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if @user.id == current_user.id %>
  <P><%= link_to "Edit",edit_user_path(@user) %></P>
  <% end %>
</div>

<div>
 <h2>Users</h2>
  <table class ="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @users.each do |user| %>
        <td><%=attachment_image_tag user,:profile_image,:fill,40,40,fallback:"no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show",user_path(user.id) %></td>
        <% end %>
      </tr>

    </tbody>
  </table>
</div>
