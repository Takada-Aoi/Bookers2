<P id="notice">
  <%= notice %>
</P>
<%= render 'books/form', book: @book %>
<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'jpeg',fallback:"no_image.jpg" %>
<table class = "table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@booknew,local:true do |f| %>
 <label>Title</label>
 <%= f.text_field :title %>
 <label>Opinion</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@user.id) do %>
      <%= attachment_image_tag @user,:profile_image,:fill,40,40,fallback:"no_image.jpg" %><br>
      <%= @user.name %>
      <% end %>
      </td>

      <td>
      <%= link_to book_path(@book) do %>
      <%= @book.title %>
      <% end %>
      </td>

      <td>
        <%= @book.body %>
      </td>

      <td>
      <% if @book.user == current_user %>
      <%= link_to "Edit",edit_book_path(@book) %>
      <% end %>
      </td>

      <td>
      <% if @book.user == current_user %>
      <%= link_to "Destroy",book_path(@book),method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
      </td>

    </tr>
  </tbody>
</table>