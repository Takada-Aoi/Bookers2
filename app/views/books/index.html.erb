<%= render 'books/form',book:@book %>

<div>
 <h2>Books</h2>
  <table class ="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <% @books.each do |book| %>
    
        <td>
        
        <%=attachment_image_tag book.user,:profile_image,:fill,40,40,fallback:"no_image.jpg" %>
        
        </td>
        
        <td><%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
        </td>
        
        <td><%= book.body %></td>
        <% end %>
      </tr>

    </tbody>
  </table>
</div>