<%= render 'books/form', book: @book %>
<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'jpeg',fallback:"no_image.jpg" %>
<table class = "table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book,local:true do |f| %>
 <label>Title</label>
 <%= f.text_field :title %>
 <label>Opinion</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>


<div>
 <h2>Books</h2>
  <table class ="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <% @books.each do |book| %>
        <td>
        <%= link_to user_path(book.user) do %>
        <%=attachment_image_tag book.user,:profile_image,:fill,40,40,fallback:"no_image.jpg" %>
        <% end %>
        </td>
        <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
        </td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>